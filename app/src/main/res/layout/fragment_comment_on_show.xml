<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="Fragments.comment_on_show">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/list_of_comments"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_weight="1">

            <EditText
                android:id="@+id/new_comment"
                android:background="@color/primary_dark_material_light"
                android:textColor="@color/secondary_text_default_material_dark"
                android:lines="1"
                android:scrollbars="none"
                android:padding="5dp"
                android:hint="Say it, don't spray it..."
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <Button
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/send_comment"
                android:textColor="@color/abc_secondary_text_material_dark"
                android:text="Send"
                android:background="@color/abc_search_url_text_normal" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
