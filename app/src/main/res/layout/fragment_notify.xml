<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.notify_widget">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:gravity="center"
       >

       <Button
           android:layout_width="220dp"
           android:layout_height="60dp"
           android:id="@+id/detview_bt_subscribe"
           android:text="Checking subscription..."
           android:layout_gravity="center"
           android:background="@drawable/btn_state_selector"
           android:layout_marginBottom="20dp"
           />

       <Button
           android:layout_marginTop="20dp"
           android:layout_width="220dp"
           android:layout_height="60dp"
           android:id="@+id/detview_bt_widget"
           android:text="Set up a widget"
           android:layout_gravity="center"
           android:background="@drawable/btn_state_selector"
           />



       </LinearLayout>

</FrameLayout>
